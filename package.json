{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18 || 20"
  },
  "scripts": {
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "new": "backstage-cli new --scope internal",
    "generate:metadata-summary": "ts-node ./scripts/getMetadataSummary",
    "generate:entities": "ts-node ./scripts/convertToCatalogInfo.ts",
    "generate:json": "ts-node ./scripts/convertLandscapeToJson.ts",
    "generated:types": "yarn generate:json && ./node_modules/maketypes/index.js -i ./output/generated_types.ts ./output/generated_landscape.json Landscape"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.23.0",
    "@backstage/e2e-test-utils": "^0.1.0",
    "@playwright/test": "^1.32.3",
    "@spotify/prettier-config": "^12.0.0",
    "@types/node": "^20.10.4",
    "concurrently": "^8.0.0",
    "lerna": "^7.3.0",
    "maketypes": "^1.1.2",
    "node-gyp": "^9.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.0",
    "yaml": "^2.3.4"
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
